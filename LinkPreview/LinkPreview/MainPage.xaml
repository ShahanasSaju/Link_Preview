<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:LinkPreview.ViewModel"
             x:Class="LinkPreview.MainPage">

    <ContentPage.BindingContext>
        <local:LinkPreview_ViewModel/>
    </ContentPage.BindingContext>

    <StackLayout Margin="10">
        
        <StackLayout Orientation="Horizontal">
            <Entry Text="{Binding UrlEntry}" Placeholder="Enter Url here."  HorizontalOptions="FillAndExpand"/>
            <Button Text="X" Margin="0,0,0,10" Command="{Binding ClearTextCommand}" Background="Transparent" TextColor="DarkGrey" HorizontalOptions="End" VerticalOptions="Center"/>
        </StackLayout>


        <StackLayout x:Name="LinkPreviewPanel" Orientation="Vertical" Margin="20" >
            
            <StackLayout.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding OpenLinkPreviewCommand}" CommandParameter="{Binding UrlEntry}"/>
            </StackLayout.GestureRecognizers>
            
            <Image Source="{Binding ImageUrl}" HeightRequest="200" />
            <Label Text="{Binding Title}" FontAttributes="Bold" Padding="10" />
            <Label Text="{Binding Description}" Margin="0,10,0,10" />
            <Label Text="{Binding Url}"  TextColor="Grey"/>
            
        </StackLayout>

    </StackLayout>

</ContentPage>
    